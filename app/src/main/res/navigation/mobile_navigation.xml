<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.jeva.jeva.home.maps.MapFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_maps">
        <action
            android:id="@+id/action_navigation_maps_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard"
            app:enterAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_navigation_maps_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_maps_to_swipeImages"
            app:destination="@id/swipeImages" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.jeva.jeva.home.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_maps"
            app:destination="@id/navigation_maps" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.jeva.jeva.home.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_maps"
            app:destination="@id/navigation_maps"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/swipeImages"
        android:name="com.jeva.jeva.images.swipeImages"
        android:label="swipeImages" >
        <action
            android:id="@+id/action_swipeImages_to_navigation_maps"
            app:destination="@id/navigation_maps" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="pos"
            app:argType="integer" />
    </fragment>
</navigation>